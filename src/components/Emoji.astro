---
type Props = {
  alt?: string;
};

const {alt} = Astro.props;
const emojiName = await Astro.slots.render('default');
const trimmedEmojiName = emojiName.trim().replace(/<[^>]*>/g, '');
const emojiUrl = `https://mk.shrimpia.network/emoji/${trimmedEmojiName}.webp`;
---

<img 
  src={emojiUrl} 
  alt={alt ?? trimmedEmojiName}
  title={alt ?? trimmedEmojiName}
  class="emoji"
  height="32"
  loading="lazy"
/>

<style lang="scss">
  .emoji {
    display: inline-block;
    width: auto;
    vertical-align: middle;
    transform-origin: center;
    transition: transform 0.2s ease;

    &:hover {
      transform: scale(1.2);
    }
  }
</style>
