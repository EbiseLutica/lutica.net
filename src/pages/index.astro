---
import Layout from '../layouts/Layout.astro';
import icon from '../assets/icon.png';
import Article from '../components/Article.astro';
import About from '../components/domains/index/about.mdx';
import Skills from '../components/domains/index/skills.mdx';
import Likes from '../components/domains/index/likes.mdx';
import Navbar from '../components/Navbar.astro';
---

<Layout root>
	<main class="root">
		<div class="card">
			<div class="avatar-wrapper">
				<img src={icon} alt="かわいいるちかちゃん" class="avatar" />
			</div>
			<div class="inner">
				<h1>Ebise Lutica</h1>
				<p class="description">いろいろ・エンジニア！</p>
				<div class="links">
					<a href="#about" class="button primary">自己紹介</a>
					<a href="/blog" class="button">ブログ</a>
				</div>
			</div>
		</div>
		<aside class="image-copyright">
			Generated by Anything v3 and Stable Diffusion.
		</aside>
	</main>
	<Navbar />
	<Article id="about" heading="誰？"><About/></Article>
	<Article id="skills" heading="できること"><Skills/></Article>
	<Article id="likes" heading="趣味"><Likes/></Article>
</Layout>

<style lang="scss">
.root {
	display: flex;
	position: relative;
	align-items: center;
	justify-content: center;
	min-height: 100vh;
	background-image: url('/bg-darker.jpg');
	background-size: cover;
	background-attachment: fixed;
	box-shadow: 0 0 64px 48px rgba(0, 0, 0, 0.6) inset;

	.card {
		position: relative;
		width: 100%;
		max-width: 720px;
		padding: 16px;
		margin: 16px;
		background-color: var(--primaryDark);
		text-align: center;
		border-radius: 2px;

		.inner {
			padding: 16px;
			border: 2px solid var(--warn);
		}

		.description {
			opacity: 0.8;
		}

		.links {
			display: flex;
			gap: 8px;
			justify-content: center;
		}
	}

	.avatar-wrapper {
		$size: 96px;
		position: absolute;
		left: calc(50% - ($size / 2));
		top: -64px;
		background-color: var(--primaryDark);
		color: var(--background);
		position: absolute;
		border-radius: 999px;
		padding: 8px;
		width: $size;
		height: $size;
		border: 2px solid var(--warn);

		img {
			width: 100%;
			border-radius: 999px;
		}
	}

	.image-copyright {
		position: absolute;
		right: 0;
		bottom: 0;
		margin: 16px;
		opacity: 0.4;
	}
}
</style>
