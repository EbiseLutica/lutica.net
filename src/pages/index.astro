---
import Layout from '../layouts/Layout.astro';
import icon from '../assets/icon.png';
import Article from '../components/Article.astro';
import About from '../components/domains/index/about.mdx';
import Skills from '../components/domains/index/skills.mdx';
import Likes from '../components/domains/index/likes.mdx';
import Navbar from '../components/Navbar.astro';
import { Icon } from 'astro-icon/components';
---

<Layout root>
	<main class="root">
		<div class="card">
			<div class="inner">
				<h1>Ebise Lutica</h1>
				<p class="description">いろいろ・エンジニア！</p>
				<div class="links">
					<a href="/blog" class="button social">
						<Icon name="bi:newspaper" />
					</a>
					<a href="https://mk.shrimpia.network/@lutica" style="--brand-bg: #A1CA03" class="button social" target="_blank" rel="noopener noreferrer">
						<Icon name="simple-icons:misskey" />
					</a>
					<a href="https://x.com/lutica_f" class="button social" target="_blank" rel="noopener noreferrer">
						<Icon name="simple-icons:x" />
					</a>
					<a href="https://github.com/ebiselutica" class="button social" target="_blank" rel="noopener noreferrer">
						<Icon name="simple-icons:github" />
					</a>
					<a href="https://soundcloud.com/lutica_sc" style="--brand-bg: #FF5500" class="button social" target="_blank" rel="noopener noreferrer">
						<Icon name="simple-icons:soundcloud" />
					</a>
				</div>
			</div>
		</div>
		<aside class="image-copyright">
			Generated by Anything v3 and Stable Diffusion.
		</aside>
	</main>
	<Navbar />
	<Article id="about" heading="誰？"><About/></Article>
	<Article id="skills" heading="できること"><Skills/></Article>
	<Article id="likes" heading="趣味"><Likes/></Article>
</Layout>

<style lang="scss">
.root {
	display: flex;
	position: relative;
	align-items: center;
	justify-content: center;
	min-height: 100vh;
	background-image: url('/bg-darker.jpg');
	background-size: cover;
	background-attachment: fixed;
	box-shadow: 0 0 64px 48px rgba(0, 0, 0, 0.6) inset;

	.card {
		--foreground: #fff;
		position: relative;
		width: 100%;
		max-width: 720px;
		padding: 16px;
		margin: 16px;
		background-color: var(--primaryDark);
		text-align: center;
		border-radius: 2px;
		color: var(--foreground);

		.inner {
			padding: 16px;
			border: 2px solid var(--warn);
		}

		.description {
			opacity: 0.8;
		}

		.links {
			display: flex;
			gap: 8px;
			justify-content: center;
		}
	}

	.avatar-wrapper {
		$size: 96px;
		position: absolute;
		left: calc(50% - ($size / 2));
		top: -64px;
		background-color: var(--primaryDark);
		color: var(--background);
		position: absolute;
		border-radius: 999px;
		padding: 8px;
		width: $size;
		height: $size;
		border: 2px solid var(--warn);

		img {
			width: 100%;
			border-radius: 999px;
		}
	}

	.image-copyright {
		position: absolute;
		right: 0;
		bottom: 0;
		margin: 16px;
		opacity: 0.4;
	}

	.button.social {
		--brand-bg: var(--foreground);
		--brand-fg: #000;
		width: 52px;
		height: 52px;
		padding: 0;
		display: flex;
		align-items: center;
		justify-content: center;
		font-size: 1.4rem;
		border-radius: 999px;
		background-color: transparent;

		transition: all 0.2s ease;

		&:hover {
			border-color: var(--brand-bg);
			background: var(--brand-bg);
			color: var(--brand-fg);
		}
	}
}
</style>
